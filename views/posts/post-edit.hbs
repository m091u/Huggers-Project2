<h2>Edit the post: {{post.title}}</h2>

<form action="/posts/{{post._id}}/edit" method="post">
  <label>
    Title:
    <input type="text" name="title" value="{{post.title}}" />
  </label>

  <label>
    Post:
    <input type="text" name="content" value="{{post.content}}" />
  </label>


  <button>Save changes</button>
</form>